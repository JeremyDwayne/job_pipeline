<div id="<%= dom_id interview %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Type:</strong>
    <%= interview.type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Stage:</strong>
    <%= interview.stage %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Scheduled at:</strong>
    <%= interview.scheduled_at %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Notes:</strong>
    <%= interview.notes %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Contact:</strong>
    <%= interview.contact_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Company:</strong>
    <%= interview.company_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this interview", interview, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this interview", edit_interview_path(interview), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
